.table {
    display: table;
    overflow: scroll;
    table-layout: auto;
}

.table-head {
    position: sticky;
    top: 0rpx;
    z-index: 100;
    display: table-row;
    height: 96rpx;
    line-height: 96rpx;
    white-space: nowrap;
    font-size: 24rpx;
    font-weight: 700;
    color: #aaabbb;
    border-bottom: 2rpx solid #ecf1f8;
    text-align: center;

}

.table-head-td {
    box-sizing: border-box;
    display: table-cell;
    white-space: nowrap;
    background-color: #fff;
    
    padding-left: 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.table-head-td:nth-child(1) {
    position: sticky;
    z-index: 101;
    left: 0rpx;
    padding-left: 24rpx;
    margin-right: 40rpx;
}

.table-head-td-text {
    display: inline;
}

.table-row {
    display: table-row;
    white-space: nowrap;
    border-bottom: 2rpx solid #ecf1f8;
    text-align: center;
}

.table-row-td {
    overflow: scroll;
    white-space: nowrap;
    display: table-cell;
    background-color: #fff;
    box-sizing: border-box;
    font-size: 26rpx;
    line-height: 96rpx;
    white-space: nowrap;
    
    padding-left: 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.table-row-td:nth-child(1) {
    position: sticky;
    z-index: 10;
    left: 0;
    margin-right: 40rpx;
    padding-left: 24rpx;
}
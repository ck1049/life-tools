<ScrollView class="table" scroll-x scroll-y bindscrolltolower="handleScrollToLower">
  <View style="height:{{tableHeight}}rpx;">
    <View class="table-head" style="width:{{tableWidth}}rpx;">
      <View class="table-head-td" wx:for="{{ redBallsTrend.headers }}" wx:for-item="header" wx:key="index">
        <Text
          class="table-head-td-text"
        >{{ header.title }}</Text>
      </View>
    </View>
    <View class="table-row" wx:for="{{ redBallsTrend.data }}" wx:for-item="row" wx:key="index" style="width:{{tableWidth}}rpx;">
      <Text class="table-row-td" wx:for="{{ row }}" wx:for-index="key" wx:key="key" wx:for-item="value">{{ value }}</Text>
    </View>
  </View>
</ScrollView>

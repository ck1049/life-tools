    border: 2px solid blue;
} */

.blue-ball-heat {
    width: 800rpx;
    height: 180rpx;
    border: lightgreen solid 1px;
}

.blue-ball-heat canvas {
    width: 100%;
    height: 100%;
}

.heat-canvas {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    /* border: 1px solid blue; */
    padding-left: 0;
    padding-right: 0;
    padding-top: 5%;
    padding-bottom: 5%;
}
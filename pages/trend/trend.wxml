<!--index.wxml-->
<view class="container">
    <table class="table" headers="{{ redBallsTrend.headers }}" data="{{ redBallsTrend.data }}"></table>
    <swiper class="swiper-container" indicator-dots="{{swiper.indicatorDots}}" autoplay="{{swiper.autoplay}}" interval="{{swiper.interval}}" duration="{{swiper.duration}}">
        <swiper-item>
            <view class="swiper-item">
                <ec-canvas id="amount-trend-line" canvas-id="amount-trend-line" ec="{{ amountTrend }}" style="border-bottom: 1px solid lightgray;"></ec-canvas>
                <ec-canvas id="bonus-pool-trend-line" canvas-id="bonus-pool-trend-line" ec="{{ bonusPool }}"></ec-canvas>
            </view>
        </swiper-item>
        <swiper-item style="overflow: scroll;">
            <!-- <view class="swiper-item" style="overflow: scroll;" catchtouchmove="onOuterSwiperTouchMove">
                <table class="table" headers="{{ redBallsTrend.headers }}" data="{{ redBallsTrend.data }}"></table>
            </view> -->
        </swiper-item>
    </swiper>

</view>